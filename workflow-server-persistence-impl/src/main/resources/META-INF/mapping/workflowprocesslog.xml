	<named-query name="WorkflowProcessLog.readAll">
		<query>
			SELECT new ci.gouv.dgbf.system.workflow.server.persistence.entities.WorkflowProcessLog(log.id)
			FROM ProcessInstanceLog log
		</query>
	</named-query>
	
	<!-- count -->
	
	<named-query name="WorkflowProcessLog.countAll">
		<query>
			SELECT COUNT(log)
			FROM ProcessInstanceLog log
		</query>
	</named-query>
	
</entity-mappings>
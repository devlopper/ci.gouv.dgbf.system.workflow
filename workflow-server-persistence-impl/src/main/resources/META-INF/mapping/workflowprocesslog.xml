<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_2_0.xsd"
	version="2.0">
	
	<!-- read one -->
	
	<named-query name="WorkflowProcessLog.readByCorrelationKey">
		<query>
			SELECT new ci.gouv.dgbf.system.workflow.server.persistence.entities.WorkflowProcessLog(log.id)
			FROM ProcessInstanceLog log
			WHERE log.correlationKey = :correlationKey
		</query>
	</named-query>
	
